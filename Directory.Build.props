<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup Label="Build">
    <Authors>Jean Gatto (@jeangatto)</Authors>
    <MaintainerEmail>jean_gatto@hotmail.com</MaintainerEmail>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/jeangatto/ASP.NET-Core-API-CQRS-EVENT-DDD-SOLID</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <!-- Set the neutral language to English -->
    <NeutralLanguage>en</NeutralLanguage>
    <!-- Set the language version to the latest available -->
    <LangVersion>latest</LangVersion>
    <!-- Disable implicit usings -->
    <ImplicitUsings>disable</ImplicitUsings>
    <!-- Disable nullable reference types -->
    <Nullable>disable</Nullable>
    <!-- Set the analysis level to the latest available -->
    <AnalysisLevel>latest</AnalysisLevel>
    <!-- Enable .NET analyzers -->
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <!-- Any warning message generated by the compiler will cause the build process to fail. -->
    <!-- This can be useful to enforce strict code quality standards and ensure that all warnings are addressed before deploying the code. -->
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <!-- Enabling Build Acceleration can reduce incremental build times by up to 80% for SDK-style .NET projects. -->
    <AccelerateBuildsInVisualStudio>true</AccelerateBuildsInVisualStudio>
    <!-- CS1591: Missing XML Comment Warning -->
    <NoWarn>$(NoWarn);1591</NoWarn>
    <!-- The ContinuousIntegrationBuild property indicates whether a build is executing on a continuous integration (CI) server. -->
    <ContinuousIntegrationBuild Condition="'$(GITHUB_ACTIONS)' == 'true'">true</ContinuousIntegrationBuild>
  </PropertyGroup>

  <ItemGroup Label="Code Analyzers Package References">
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" />
    <PackageReference Include="Roslynator.Analyzers">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="SonarAnalyzer.CSharp">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="NSubstitute.Analyzers.CSharp">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>